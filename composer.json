{
  "name": "craig/imap-mail-manager",
  "description": "Wrapper for PHP imap",
  "license": "MIT",
  "authors": [
    {
      "name": "Craig Humphreys",
      "email": "craig_h_411@yahoo.co.uk"
    }
  ],
  "require": {
    "nesbot/carbon": "^1.21"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.5",
    "phpunit/phpunit": "^5.1",
    "sami/sami": "~3.0.0",
    "mockery/mockery": "^0.9.4"
  },
  "autoload": {
    "psr-4": {
      "Humps\\MailManager\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Humps\\MailManager\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -f installer.php"
    ],
    "docs" : "vendor\\bin\\sami.php.bat update sami.php -v"
  },
  "prefer-stable": true
}
